<MenuBar>
	<Menu name="Witness">
		<Menu name="About Witness" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Witness" shell="win -c"/>
	</Menu>
	<Menu name="Levels" for="puzzle-options">
		<Menu name="Start View" check-group="active-level" click="render-level" arg="0.1"/>
		<Menu type="divider"/>
		<Menu name="Edit&#8230;">
			<Menu name="Edit View" click="toggle-edit-view"/>
			<Menu name="Blank Tempate" click="blank-template"/>
		</Menu>
		<Menu type="divider"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>

	<Menu for="grid-palette">
		<Menu name="Blue" click="set-palette" arg="blue"/>
		<Menu name="Grey" click="set-palette" arg="grey"/>
		<Menu name="Green" click="set-palette" arg="green"/>
		<Menu name="Orange" click="set-palette" arg="orange"/>
		<Menu name="Pink" click="set-palette" arg="pink"/>
		<Menu name="Purple" click="set-palette" arg="purple"/>
	</Menu>

	<Menu for="grid-symmetry">
		<Menu name="No symmetry" click="set-symmetry" arg="1"/>
		<Menu name="Horizontal" click="set-symmetry" arg="2"/>
		<Menu name="Vertical" click="set-symmetry" arg="3"/>
		<Menu name="Rotational" click="set-symmetry" arg="4"/>
	</Menu>

	<Menu for="extras-color">
		<Menu type="colors" caption="Extras Color:" click="set-extras-color">
			<Color arg="#157efb" active="1"/>
			<Color arg="#944194"/>
			<Color arg="#de3a43"/>
			<Color arg="#f5822e"/>
			<Color arg="#fab73b"/>
			<Color arg="#65b84d"/>
			<Color arg="#989898"/>
			<Color arg="#ff9900"/>
			<Color arg="#336699"/>
		</Menu>
	</Menu>
</MenuBar>