<MenuBar>
	<Menu name="Witness">
		<Menu name="About Witness" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Quit Witness" shell="win -c"/>
	</Menu>
	<Menu name="Levels" for="puzzle-options">
		<Menu name="Edit View" click="toggle-edit-view"/>
		<!-- <Menu name="Keep Snake" check-group="keep-snake" click="toggle-keep-snake"/> -->
		<Menu type="divider"/>
		<Menu name="Start View" check-group="active-level" click="render-level" arg="0.1"/>
		<Menu type="divider"/>
		<Menu name="Level 1&#8230;">
			<Menu name="1.0" check-group="active-level" click="render-level"/>
			<Menu name="1.1" check-group="active-level" click="render-level"/>
			<Menu name="1.2" check-group="active-level" click="render-level"/>
			<Menu name="1.3" check-group="active-level" click="render-level"/>
		</Menu>
		<Menu name="Level 2&#8230;">
			<Menu name="2.0" check-group="active-level" click="render-level"/>
			<Menu name="2.5" check-group="active-level" click="render-level"/>
		</Menu>
		<Menu name="Level 3&#8230;">
			<Menu name="3.0" check-group="active-level" click="render-level"/>
			<Menu name="3.1" check-group="active-level" click="render-level"/>
			<Menu name="3.2" check-group="active-level" click="render-level"/>
			<Menu name="3.3" check-group="active-level" click="render-level"/>
			<Menu name="3.4" check-group="active-level" click="render-level"/>
			<Menu name="3.5" check-group="active-level" click="render-level"/>
			<Menu name="3.6" check-group="active-level" click="render-level"/>
			<Menu name="3.7" check-group="active-level" click="render-level"/>
			<Menu name="3.8" check-group="active-level" click="render-level"/>
			<Menu name="3.9" check-group="active-level" click="render-level"/>
			<Menu name="3.10" check-group="active-level" click="render-level"/>
		</Menu>
		<Menu name="Level 4&#8230;">
			<Menu name="4.0" check-group="active-level" click="render-level"/>
			<Menu name="4.1" check-group="active-level" click="render-level"/>
			<Menu name="4.2" check-group="active-level" click="render-level"/>
			<Menu name="4.3" check-group="active-level" click="render-level"/>
			<Menu name="4.4" check-group="active-level" click="render-level"/>
			<Menu name="4.5" check-group="active-level" click="render-level"/>
			<Menu name="4.6" check-group="active-level" click="render-level"/>
		</Menu>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>

	<Menu for="grid-palette">
		<Menu name="Blue" click="set-palette" arg="blue"/>
		<Menu name="Gray" click="set-palette" arg="gray"/>
		<Menu name="Green" click="set-palette" arg="green"/>
		<Menu name="Orange" click="set-palette" arg="orange"/>
		<Menu name="Pink" click="set-palette" arg="pink"/>
		<Menu name="Purple" click="set-palette" arg="purple"/>
	</Menu>

	<Menu for="grid-symmetry">
		<Menu name="No symmetry" click="set-symmetry" arg="1"/>
		<Menu name="Horizontal" click="set-symmetry" arg="2"/>
		<Menu name="Vertical" click="set-symmetry" arg="3"/>
		<Menu name="Rotational" click="set-symmetry" arg="4"/>
	</Menu>

	<Menu for="extras-color">
		<Menu type="colors" caption="Extras Color:" click="set-extras-color">
			<Color arg="#157efb" active="1"/>
			<Color arg="#944194"/>
			<Color arg="#de3a43"/>
			<Color arg="#f5822e"/>
			<Color arg="#fab73b"/>
			<Color arg="#65b84d"/>
			<Color arg="#989898"/>
			<Color arg="#ff9900"/>
			<Color arg="#336699"/>
		</Menu>
	</Menu>
</MenuBar>